<h2>管理者画面 User一覧</h2>
<br>
<table>
  <thead>
    <tr>
      <th class="col-sm-1 col-md-1">ユーザー名</th>
      <th class="col-sm-2 col-md-2">Email</th>
      <th class="col-sm-2 col-md-2">アカウント作成日時</th>
      <th class="col-sm-2 col-md-2">アカウント最終更新日時</th>
      <th class="col-sm-1 col-md-1">タスク数</th>
      <th class="col-sm-1 col-md-1">管理者</th>
      <th class="col-sm-1 col-md-1"></th>
      <th class="col-sm-1 col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr> 
        <td class="col-sm-1 col-md-1"><%= user.name %></td>
        <td class="col-sm-2 col-md-2"><%= user.email %></td>
        <td class="col-sm-2 col-md-2"><%= user.created_at %></td>
        <td class="col-sm-2 col-md-2"><%= user.updated_at %></td>
        <td class="col-sm-1 col-md-1"><%= user.tasks.size %>個</td>
        <td class="col-sm-1 col-md-1"><%= p("●") if user.admin %></td>
        <td class="col-sm-1 col-md-1"><%= link_to '投稿を編集', edit_admin_user_path(user) %></td>
        <td class="col-sm-1 col-md-1"><%= link_to '投稿を削除', admin_user_path(user.id), method: :delete, data: { confirm: 'このユーザーを削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p><%= link_to '新しユーザーを作成', new_admin_user_path %></p>

<div id = "index_paginate"><%= paginate @users %></div>