<h2>管理者画面 アカウント作成</h2>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<br>
<br>
<%= form_with(model: @user,url:admin_users_path, method: :post, local: true) do |f| %>  
  <div class="new_input_box">
    <div class="user_new">
      <%= f.label :名前 %>
      <%= f.text_field :name %>
    </div>
    <div class="user_new">
      <%= f.label :メール %>
      <%= f.email_field :email %>
    </div>
    <div class="user_new">
      <%= f.label :パスワード %>
      <%= f.password_field :password %>
    </div>
    <div class="user_new">
      <%= f.label :パスワード確認 %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="user_new">
      <%= f.label :一般または管理者 %>
      <%= f.select :admin, [['一般',false],['管理者',true]] %>
    </div>
    <br>
    <%= f.submit "送信する", class: "btn-square"  %>
  </div>
<% end %>

