<h1><%= t 'activerecord.blog.index_tasks' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'activerecord.blog.update' %></th>
      <th><%= t 'activerecord.blog.title' %></th>
      <th><%= t 'activerecord.blog.content' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to(t('activerecord.blog.show'), task_path(id:task.id)) %></td>
        <td><%= link_to(t('activerecord.blog.edit'), edit_task_path(id:task.id)) %></td>
        <td><%= link_to(t('activerecord.blog.delete'), task_path(id:task.id), method: :delete, data: { confirm: t('activerecord.blog.are_you_sure_to_delete') }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to(t('activerecord.blog.add_new_task'), new_task_path) %>